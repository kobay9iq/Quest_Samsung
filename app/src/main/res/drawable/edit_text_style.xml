<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item>
    <shape android:shape="rectangle">
      <solid android:color="@color/shadowText"></solid>
      <corners android:radius="20dp" />
      <padding
        android:bottom="4dp"
        android:left="3dp"
        android:right="3dp"
        android:top="4dp" />
      <size
        android:width="162dp"
        android:height="44dp" />
    </shape>
  </item>
  <item>
    <shape android:shape="rectangle">
      <solid android:color="@color/white" />
      <corners android:radius="20dp" />
      <size
        android:width="50dp"
        android:height="50dp" />
    </shape>
  </item>
</layer-list>