<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".GameActivity">

  <ImageView
    android:id="@+id/background_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"
    android:src="@drawable/scene_background" />

  <LinearLayout
    android:id="@+id/indicators_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:background="@color/statsBackground">

    <TextView
      android:id="@+id/gold_indicator"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:textColor="@color/white"
      android:gravity="center"
      android:text="null"/>

    <TextView
      android:id="@+id/reputation_indicator"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:textColor="@color/white"
      android:gravity="center"
      android:text="null" />

    <TextView
      android:id="@+id/population_indicator"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:textColor="@color/white"
      android:gravity="center"
      android:text="null" />
  </LinearLayout>

  <ImageView
    android:id="@+id/scene_image"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_centerInParent="true"
    android:src="@color/black"
    />

  <TextView
    android:id="@+id/scene_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/scene_image"
    android:layout_centerHorizontal="true"
    android:textColor="@color/white"
    android:padding="16dp"
    android:text="null"
    android:textSize="16sp" />

  <LinearLayout
    android:id="@+id/buttons_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical"
    android:layout_marginBottom="25dp">

    <Button
      android:id="@+id/button_1"
      android:layout_gravity="center"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="null" />

    <Button
      android:id="@+id/button_2"
      android:layout_gravity="center"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="null" />

  </LinearLayout>

</RelativeLayout>
